pipeline{
    agent {
        docker {
            image 'maven:latest'
        } 
    }

    environment{
        NEW_RELEASE = "1.0.0"
        INITIAL_RELEASE = "0.9.0"
    }

    stages{
        stage('audit check'){
            steps{
                sh'''
                    git --version
                    mvn -version
                    java -version
                    docker -version
                '''
            }
        }

        stage('checkout'){
            steps{
                checkout scm
            }
        }

        stage('build'){
            steps{
                echo 'building the app ...'
                sh 'mvn clean compile'
            }
        }

        stage('tests'){
            steps{
                sh'''
                    echo 'testing the app ...'
                    mvn test
                '''
            }
        }

        stage('deploy'){
            input{
                message 'Are you sure you want to deploy?'
                ok 'Yes, deploy now'
                parameters{
                    string(name: 'DEPLOYER_NAME', defaultValue: 'admin', description: 'Name of the person deploying')
                }
            }   
            steps{
                echo 'deploying the app ...'
                echo "Deployed by: ${params.DEPLOYER_NAME}"
            }
        }
        
    }

    post{
        success{
            echo 'The pipeline has succeeded!'
        }
        failure{
            echo 'The pipeline has failed!'
        }
    }
}
